{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": ["*.yml", "*.css", "*.md"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-sort-json"],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
}
